<% provide(:title, @user.name) %>

<div>
  <span class="content"> Name: <%= @user.name %> </span>
  <span class="content"> Date Of Birth: <%= @user.dob %> </span>
  <span class="content"> Email: <%= @user.email %> </span>
  <h2>Joined Project</h2>
  <% @user.projects.each do |p| %>
    <%= link_to p.name, [:admin,p] %><br>
  <% end %>   
</div>
<p></p>
<div>
  <%= link_to "Edit ", edit_admin_user_path(@user.id),
                                class: "btn btn-large btn-primary" %>
  <%= link_to "Delete", [:admin,@user], method: :delete, class: "btn btn-large btn-primary" ,
                                data: { confirm: "You sure?" } %>
    
</div>